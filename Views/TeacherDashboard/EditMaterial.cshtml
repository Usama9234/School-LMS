@model School_Management_System.Models.Teacher.LearningMaterial

@{
    ViewData["Title"] = "EditMaterial";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

<div class="page-wrapper">

    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="TeacherDashboard">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Edit Learning Material</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>


    <div class="container-fluid">

        <div class="row">

            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title m-b-0"><i class="fas fa-calendar-alt"></i> Edit Learning Material</h5>
                    </div>

                    <div class="row">
                        <div class="card-body">
                            <form asp-controller="TeacherDashboard" asp-action="EditMaterial" method="post" enctype="multipart/form-data">
                                <div class="form-horizontal">
                                    <input asp-for="Id" type="hidden" />

                                    <div class="form-group">
                                        <label class="control-label col-md-3">Title</label>
                                        <div class="col-md-9">
                                            <input asp-for="Title" class="form-control" />
                                            <span asp-validation-for="Title" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3">Current File</label>
                                        <div class="col-md-9">
                                            <span class="form-control">@Model.FileName</span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3">Upload New File</label>
                                        <div class="col-md-9">
                                            <input type="file" class="form-control-file" id="file" name="file">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-offset-3 col-md-9">
                                            <button type="submit" class="btn btn-default">Update</button>
                                            <a asp-action="ViewUploadedMaterials" class="btn btn-default">Back to List</a>
                                        </div>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
