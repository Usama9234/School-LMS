@model School_Management_System.Models.Teacher.StudentAttendance
@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor accessor

@{
    ViewData["Title"] = "EditStudentAttendance";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

<div class="page-wrapper">
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">Staff Attendance</h4>
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="TeacherDashboard">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Edit Staff Attendance</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">

        <div class="row">

            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title m-b-0"><i class="fas fa-users"></i>Edit Staff Attendance</h5>
                    </div>

                    <div class="row">
                        <div class=" card-body">
                            <form asp-action="EditStudentAttendance" asp-controller="TeacherDashboard" asp-route-classId="@Model.ClassId" asp-route-subjectId="@Model.SubjectId" asp-route-studentId="@Model.StudentId" method="post">

                                <div class="form-horizontal">

                                    <div class="form-group">
                                        <input asp-for="Id" type="hidden" />
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-5">Class Name</label>
                                        <span class="form-control">@Model.ClassName</span>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-5">Student Name</label>
                                        <span class="form-control">@Model.StudentName</span>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-5">Roll No</label>
                                        <span class="form-control">@Model.RollNo</span>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-5">Subject Name</label>
                                        <span class="form-control">@Model.SubjectName</span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="Date" class="control-label col-md-2"></label>
                                        <div class="col-md-10">
                                            <input asp-for="Date" class="form-control" type="date" />
                                            <span asp-validation-for="Date" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="Remarks" class="control-label col-md-2"></label>
                                        <div class="col-md-10">
                                            <input asp-for="Remarks" class="form-control" />
                                            <span asp-validation-for="Remarks" class="text-danger"></span>
                                        </div>
                                    </div>
                                    

                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <button type="submit" class="btn btn-default">Update</button>
                                        </div>
                                    </div>

                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
